<p id="notice"><%= notice %></p>

<h1>Descricaos</h1>

<table class="table table-bordered table-hover">
  <thead>
    <tr>
      <th>Departamento</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @descricaos.each do |descricao| %>
      <tr>
        <td><%= descricao.departamento %></td>
        <td><%= descricao.user %></td>
        <td><%= link_to 'Show', descricao %></td>
        <td><%= link_to 'Edit', edit_descricao_path(descricao) %></td>
        <td><%= link_to 'Destroy', descricao, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

