<div class="alert alert-success" role="alert"><%= flash[:notice] %></div>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Departamento</td>
            <td>Equipamento</td>
            <td>Descricao</td>
            <td>Data</td>
            <td colspan="1">
        </tr>
    </thead>
<tbody>
    <% @produtos.each do |produto| :nome %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.departamento %></td>
            <td><%= produto.equipamento %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.created_at %></td>
            <td><%= link_to "Atualizar", edit_produto_path(produto), class: "btn btn-default" %>
            <td><%= button_to "Remover", produto, method: :delete, class:"btn btn-danger", 
                data: {confirm: "Tem certeza que deseja remover o chamado de #{produto.nome}?"} %></td>
            
        </tr>
    <% end %>
</tbody>
</table>

<%= paginate @produtos %>
    <div class="alert alert-success" role="alert">
        <h4 class="alert-heading">Chamados com Urgencia</h4>
    </div>
<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Departamento</td>
            <td>Equipamento</td>
            <td>Descricao</td>
            <td>Data</td>
        </tr>
    <% @produto_com_desconto.each do |produto| :data %>
        <tr>
            <td><%= produto.nome %></td>
            <td><%= produto.departamento %></td>
            <td><%= produto.equipamento %></td>
            <td><%= produto.descricao %></td>
            <td><%= produto.created_at %></td>
        </tr>
    <% end %>
    </thead>
</table>
<%= paginate @produto_com_desconto %>
